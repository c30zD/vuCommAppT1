<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vuit.teamwork.ui.ContactsActivity">

    <TextView android:text="@string/search" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblSearch" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtSearch"
        android:layout_toEndOf="@+id/lblSearch"
        android:layout_alignBottom="@+id/lblSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="text"
        android:imeOptions="actionSearch"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstMultiuse"
        android:layout_below="@+id/lblSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:listSelector="@drawable/list_selector"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp"/>

</RelativeLayout>
